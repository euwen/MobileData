<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="detector.wsn.ustc.com.mydataapp">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="com.ustc.wsn.mydataapp.Application.AppResourceApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:persistent="true"
        android:theme="@android:style/Theme.DeviceDefault.Light">
        <activity
            android:name="com.ustc.wsn.mydataapp.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ustc.wsn.mydataapp.activity.DetectorActivity"
            android:label="@string/app_name" />

        <service
            android:name="com.ustc.wsn.mydataapp.service.DetectorService"
            android:enabled="true">
            <intent-filter android:priority="1000">
                <action android:name="com.ustc.wsn.mydataapp.activity.DetectorActivity" />
            </intent-filter>
        </service>
        <service android:name="com.ustc.wsn.mydataapp.service.AutoUploadSeriver">
            <intent-filter android:priority="1000">
                <action android:name="com.ustc.wsn.mydataapp.service.AutoUploadSeriver" />
            </intent-filter>
        </service>
        <service
            android:name="com.ustc.wsn.mydataapp.service.GpsService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="com.ustc.wsn.mydataapp.activity.SimulationActivity"
            android:label="传感器视图" />

        <service
            android:name="com.ustc.wsn.mydataapp.service.ChartService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="com.ustc.wsn.mydataapp.activity.LabelActivity"
            android:label="标签"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog.MinWidth" />
        <activity
            android:name="com.ustc.wsn.mydataapp.activity.UploadActivity"
            android:label="上传数据"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog.MinWidth" />

        <service
            android:name="com.ustc.wsn.mydataapp.service.TrackService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="com.ustc.wsn.mydataapp.activity.ChartingDemoActivity"
            android:enabled="true"
            android:exported="true"
            android:label="轨迹" />
        <activity
            android:name="com.ustc.wsn.mydataapp.activity.CalibrateStateActivity"
            android:label="状态调试" />
        <activity
            android:name="com.ustc.wsn.mydataapp.activity.AccCalibrateActivity"
            android:label="校准加速度计"></activity>
    </application>

</manifest>